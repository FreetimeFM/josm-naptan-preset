<?xml version="1.0" encoding="UTF-8"?>
<presets
    xmlns="http://josm.openstreetmap.de/tagging-preset-1.0"
    author="FreetimeFM" version="1.0"
    shortdescription="Adds NaPTAN Information."
    description="Add NaPTAN Information to public access points."
    link="https://wiki.openstreetmap.org/wiki/NaPTAN"
>
    <group name="NaPTAN Tags">
        <item name="Bus Stop" type="node" preset-name-label="true">
            <!-- Links to wiki page -->
            <link href="https://wiki.openstreetmap.org/wiki/NaPTAN" />

            <label text="Adds NaPTAN information to a bus stop. All the keys below have a dedicated page in the OSM Wiki." />
            <space />

            <text key="naptan:AtcoCode" text="ATCO Code" />
            <text key="naptan:NaptanCode" text="Naptan Code" />
            <space />

            <text key="name" text="Name" />
            <text key="naptan:CommonName" text="Common Name" />
            <label text="The Common Name is pretty much the same as Name." />
            <space />

            <combo key="naptan:Indicator" text="Indicator" values="at,opp,near,adj" editable="true" />
            <label text="Custom values are allowed such as 'Stop 1'." />
            <space />

            <check key="naptan:verified" text="Has this stop been verified/surveyed?" default="off" />
            <item_separator />

                <check key="public_transport" text="Set tag public_transport=platform?" value_on="platform" default="on" />
                <check key="highway" text="Set tag highway=bus_stop?" value_on="bus_stop" default="on" />

            <checkgroup columns="2">
                <check key="bench" text="Bench" />
                <check key="shelter" text="Shelter" />
            </checkgroup>
            <check key="bin" text="Waste Basket/Trash Can" />
            <check key="passenger_information_display" text="Passenger information display" />
            <space />

            <text key="route_ref" text="Route references" />
            <space />

            <combo key="wheelchair" text="Wheelchairs" values="yes,designated,limited,no" values_sort="false" />
            <combo key="tactile_paving" text="Tactile Paving" values="yes,no,incorrect" />
        </item>
    </group>
</presets>