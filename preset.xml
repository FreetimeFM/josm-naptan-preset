<?xml version="1.0" encoding="UTF-8"?>
<presets
    xmlns="http://josm.openstreetmap.de/tagging-preset-1.0"
    author="FreetimeFM" version="1.0"
    shortdescription="Adds NaPTAN Information."
    description="Add NaPTAN Information to public access points."
    link="https://wiki.openstreetmap.org/wiki/NaPTAN"
>
    <group name="NaPTAN Tags">
        <item name="Bus Stop" type="node">
            <link href="https://wiki.openstreetmap.org/wiki/NaPTAN" />
            <key key="public_transport" value="platform" />
            <key key="highway" value="bus_stop" />
            <text key="naptan:AtcoCode" text="ATCO Code" />
            <text key="naptan:NaptanCode" text="Naptan Code" />

            <text key="name" text="Name" />
            <text key="naptan:CommonName" text="Common Name" />
            <label text="The Common Name is pretty much the same as Name." />
            <space />

            <combo key="naptan:Indicator" text="Indicator" values="at,opp,near,adj" editable="true" />
            <label text="Custom values are allowed such as 'Stop 1'." />
            <space />
        </item>
    </group>
</presets>